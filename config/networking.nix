{ config, lib, pkgs, ... }:

with lib;

{
  options.starlight = {
    hostname = mkOption {
      type = types.str;
      description = ''
        hostname
      '';
    };
  };
  config = {
    users.users.admin.extraGroups = [ "networkmanager" ];
    networking = {
      hostName = (config.starlight.hostname);
      networkmanager = {
        enable = true;
        extraConfig = ''
          [connection]
          connection.mdns=2
          connection.llmnr=2
        '';
      };
      timeServers = [
        "time1.google.com"
        "time2.google.com"
        "time3.google.com"
        "time4.google.com"
      ];
    };
    services = {
      openssh.enable = true;
      resolved = {
        enable = !config.starlight.docker;
        llmnr = "false";
        extraConfig = ''
          MulticastDNS=false
        '';
      };
      avahi = {
        enable = true;
        nssmdns = true;
        publish = {
          enable = true;
        };
      };
    };
  };
}
